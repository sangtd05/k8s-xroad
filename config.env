# X-Road Docker Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# DOCKER IMAGES - Build from local Dockerfiles
# =============================================================================
CS_IMG=xroad-centralserver:latest
SS_IMG=xroad-securityserver:latest
CA_IMG=xroad-testca:latest
IS_OPENAPI_IMG=xroad-example-restapi:latest
IS_SOAP_IMG=xroad-example-adapter:latest

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
XROAD_TOKEN_PIN=Secret1234

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
# Central Server
CS_UI_PORT=4000
CS_DB_PORT=5432

# Security Server
SS_UI_PORT=4001
SS_PROXY_HTTP_PORT=8080
SS_PROXY_HTTPS_PORT=8443
SS_DB_PORT=5433
SS_JMX_PROXY_PORT=4299
SS_JMX_SIGNER_PORT=4298

# Test CA
CA_UI_PORT=8888
CA_API_PORT=9998

# Information Systems
IS_REST_PORT=8082
IS_SOAP_PORT=8083
IS_OPENAPI_PORT=8084

# Mailpit
MAILPIT_WEB_PORT=8025
MAILPIT_SMTP_PORT=1025

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# X-ROAD CONFIGURATION
# =============================================================================
XROAD_INSTANCE=DEV

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAILPIT_MAX_MESSAGES=5000

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem
SSL_DAYS=365

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=xroad
COMPOSE_FILE=docker-compose.yml

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=false
